<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hal"
        android:text="Hal: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rahasia"
        android:text="Rahasia"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/tv_hal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tanggal"
        android:text="Palembang, 28 Sept 2022"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_kepada"
        android:text="Kepada : "
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_hal"
        android:layout_marginTop="32dp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_kepada_siapa"
        android:layout_below="@+id/tv_kepada"
        android:entries="@array/arrKepada" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_click_here"
        android:layout_centerInParent="true"
        android:text="CLICK HERE" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_yakin"
        android:text="Yakin"
        android:layout_below="@+id/btn_click_here" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_yakin_banget"
        android:layout_below="@+id/btn_click_here"
        android:text="Yakin banget"
        android:layout_toRightOf="@id/cb_yakin" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_ga_yakin"
        android:layout_toRightOf="@+id/cb_yakin_banget"
        android:layout_below="@+id/btn_click_here"
        android:text="Ga Yakin" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_keluar"
        android:text="KELUAR"
        android:layout_alignParentBottom="true" />
</RelativeLayout>